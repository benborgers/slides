---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div
  data-slide={id}
  class="h-screen bg-sky-600/10 border-8 border-sky-400 p-[5vw]"
>
  {
    /* Not the outermost component so that the JS can switch the outermost component between display: block and display: none */
  }
  <div class="h-full flex items-center">
    <div>
      <slot />
    </div>
  </div>
</div>
