---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" href="https://emojicdn.elk.sh/🛝" />
  </head>
  <body class:list={["antialiased text-gray-700", className]}>
    <slot />
  </body>
</html>
